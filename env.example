# Career Leap AI Backend Environment Variables

# OpenAI Configuration (Optional - if not provided, will use Ollama)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Ollama Configuration (Fallback if OpenAI is not available)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2

# Application Configuration
APP_NAME="Career Leap AI"
APP_VERSION=1.0.0
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000"]

# Database Configuration
DATABASE_URL=sqlite:///./careerleap.db

# Redis Configuration (future use)
# REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30
AUTH_SECRET_KEY=your_auth_secret_key_here
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=60

# File Upload Configuration
# 10MB in bytes
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
